<script>
import wepy from 'wepy'
export default class extends wepy.page {
    config = {
        navigationBarTitleText: "我的订单",
        navigationBarBackgroundColor: '#16382e',
        navigationBarTextStyle: '#fff'
    }
    data = {
       pageNav:[{
           id:0,
           text:"全部",
           active:true
       },{
           id:1,
           text:"待付款",
           active:false
