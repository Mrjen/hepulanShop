           name:"禾葡兰丰润口红",
           oldprice:"198.00",
           price:"50.00",
           num:"3",
           total:"300"
       }]
    }

    methods = {
        changeNav(index){
            for(let i=0;i<this.pageNav.length;i++){
                this.pageNav[i].active = false;
            }
            this.pageNav[index].active = true;
            this.$apply();
        }
    }
}   
</script>